<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/pages/style.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,400;0,700;1,100;1,400;1,700&display=swap"
        rel="stylesheet">
    <title>Banco Robótica</title>
</head>

<body>
    <header>
        <div class="container animate-up">

            <a id="btnprofile" href="/profile" class="back">Perfil</a>
            <% if(profile.id===1) {%>
                <a id="btnamin" href="/admin" class="back">Administrador</a>
                <%}%>

                    <h1 id="logo">Banco Robótica</h1>
        </div>
    </header>

    <main class="container">

        <section id="balance">
            <h2 class="sr-only">Balanço</h2>

            <div class="card">
                <div class="card total">
                    <h3>
                        <span>Salto Total</span>
                        <img src="/images/assets/total.svg" alt="Imagem de total">
                    </h3>
                    <p id="totalDisplay">
                        <%= profile.totalBalance %>
                    </p>
                </div>
            </div>

        </section>

        <section id="transaction">
            <h2 class="">Ofertas do Professor</h2>

            <!-- <div class="flex-container"> -->

            <div class="container">
                <div class="row">
                    <% products.forEach((product)=> { %>
                        <div class="col-sm-6 card-group">
                            <div class="card cardList" data-id="<%= product.id %>">
                                <div class="card-body d-flex align-content-between flex-wrap">
                                    <div class="Idcolumn">
                                        <small>
                                            <%= product.id %>
                                        </small>
                                    </div>
                                    <div class="imageColumn">
                                        <img src="<%= product.imageProduct %>">
                                    </div>
                                    <div class="nameColumn">
                                        <h4>
                                            <%= product.nameProduct %>
                                        </h4>
                                    </div>
                                </div>
                                <div class="priceColumn">
                                    <span>Por:</span>
                                    <strong>M <%= product.priceProduct %></strong>
                                </div>
                                <div class="btn-by">
                                    <a href="/<%= product.id %> " class="">Comprar</a>
                                </div>
                            </div>
                        </div>
                        <!-- end card -->
                        <% }) %>
                </div>
            </div>

            <!--  </div> -->
        </section>

    </main>

    <div class="modal-overlay2">
        <div class="modal2">

            <form id="by-Product" action="/<%= product.id %>" method="post">
                <div class="input-group">
                    <label for="quantity">Insira a quantidade</label>
                    <input type="number" id="quantity" name="quantity" />
                </div>
                <div class="input-group actions">
                    <a href="/" class="button cancel">Cancelar</a>
                    <button class="btn btn-success" form="by-Product" type="submit">Comprar</button>
                </div>
            </form>
        </div>
    </div>

    <footer>
        <p>Banco Robótica</p>
    </footer>

    <script src="/javascripts/script.js"></script>
</body>

</html>